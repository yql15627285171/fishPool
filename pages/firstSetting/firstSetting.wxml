<view>
  <view class='line'>
    <text>登录账号：</text>
    <input disabled></input>
  </view>
  <view class='line' bindtap='getFocus' data-index='2'>
    <text>真实姓名：</text>
    <input focus='{{focus2}}'></input>
  </view>
  <view class='line' bindtap='getFocus' data-index='3'>
    <text>电话号码：</text>
    <input type='number' focus='{{focus3}}'></input>
  </view>
  <view class='line' bindtap='getFocus' data-index='4'>
    <text>登录密码：</text>
    <input password focus='{{focus4}}'></input>
  </view>
  <view class='line' bindtap='getFocus' data-index='5'>
    <text>确认密码：</text>
    <input password focus='{{focus5}}'></input>
  </view>

  <button type='primary' bindtap='sureCheck'>确定</button>
</view>
